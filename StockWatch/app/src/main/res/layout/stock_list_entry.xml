<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/symbolField"
        android:layout_width="111dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#65FF00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyNameField"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#65FF00"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/symbolField"
        app:layout_constraintStart_toStartOf="@+id/symbolField"
        app:layout_constraintTop_toBottomOf="@+id/symbolField" />

    <TextView
        android:id="@+id/latestPriceField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        android:textColor="#65FF00"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/symbolField"
        app:layout_constraintStart_toEndOf="@+id/symbolField"
        app:layout_constraintTop_toTopOf="@+id/symbolField"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/changeField"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="50dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#65FF00"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/latestPriceField"
        app:layout_constraintStart_toEndOf="@+id/latestPriceField"
        app:layout_constraintTop_toTopOf="@+id/latestPriceField" />

    <TextView
        android:id="@+id/changePercentField"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#65FF00"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/changeField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/changeField"
        app:layout_constraintTop_toTopOf="@+id/changeField" />
</androidx.constraintlayout.widget.ConstraintLayout>